.bulk-notification
  %h3 #{pluralize(e.count, "event")} in state #{state}
  - stakeholders = e.map { |e| e.stakeholders.count }.sum
  - nospeakers = e.select { |e| e.speakers.count == 0 }
  - if nospeakers.count > 0
    %p
      Warning: #{ pluralize(nospeakers.count, "event") } without speakers:
      - nospeakers.each do |e|
        = link_to e.title, e
  %p

  = button_to(t('notifications_module.send_notification_to_speakers', {name: name, speakers: pluralize(stakeholders, 'stakeholders'), event: pluralize(e.count, 'event')}), { action: 'send_notification', notification: state }, { class: "btn danger", data: { confirm: t('notifications_module.send_notification_confirm', {name: name, event: pluralize(e.count, 'event')}), disable_with: t('work_in_progress') }})
