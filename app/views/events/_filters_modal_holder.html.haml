#filters-modal.modal{style: "display: none;"}

:coffeescript
  update_filter_modal = (url) ->
    $.ajax(
      dataType: "html",
      url: url,
      success: (data) ->
        $('#filters-modal').modal('show')
        $('#filters-modal').html(data)
    )
    
  $('.show_filter_modal').on 'click', -> 
    update_filter_modal(this.dataset['url'])
     
  $("#filters-modal").draggable({
    handle: ".modal-header"
  }); 
  
